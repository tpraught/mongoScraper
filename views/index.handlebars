<div class="jumbotron text-center">
        <button id="scrapeButton" type="submit" class="btn btn-primary">Fetch Articles</button>
    </div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="list-group">
                        {{#each headlines}}
                            <li class="list-group-item">
                                <h3><a href={{this.link}} target="_new">{{this.title}}</a><span><button type="submit" id= "saveArticle" class="btn btn-default float-right" data-id = {{this.id}}>Save Article</button> </span></h3>  
                                <p>{{this.summary}}</p>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>